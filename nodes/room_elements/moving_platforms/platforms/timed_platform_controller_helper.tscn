script/source = "extends Node

export var has_start_timer = true
export var has_stop_timer = true

func _ready():
	if(has_start_timer):
		$start_timer.connect(\"timeout\", get_parent(), \"set_waiting\", [false])
		get_parent().connect(\"start_reached\", $start_timer, \"start\")
		get_parent().connect(\"start_reached\", get_parent(), \"set_waiting\", [true])
		get_parent().connect(\"activated\", get_parent(), \"set_waiting\", [true])
		get_parent().connect(\"activated\", $start_timer, \"start\")
	if(has_stop_timer):
		get_parent().connect(\"end_reached\", get_parent(), \"set_waiting\", [true])
		
		get_parent().connect(\"end_reached\", $stop_timer, \"start\")
	
		$stop_timer.connect(\"timeout\", get_parent(), \"set_waiting\", [false])"

