script/source = "extends \"res://addons/state_handler/state_handler.gd\"

export var stunned_time = 5
var timeout = false

func enter_state(previous_state):
	.enter_state(previous_state)
	timeout = false
	get_parent().get_node(\"ExtendedAnimationPlayer\").play(\"stunned_by_terrain\")
	
func leave_state(new_state):
	.leave_state(new_state)
	get_parent().set_flippedH(not get_parent().is_flippedH())
	
func process_state(delta):
	.process_state(delta)
	
	if(get_timer() > stunned_time and timeout == false):
		timeout = true
		get_parent().get_node(\"ExtendedAnimationPlayer\").play(\"exit_stunned\")
"

