script/source = "extends \"res://addons/state_handler/state_handler.gd\"
export var charge_wait_time = 1
var player_spotted = false
var wait_for_charge_timer = 0

func enter_state(previous_state):
	.enter_state(previous_state)
	wait_for_charge_timer = charge_wait_time
	player_spotted = false
	
	
func leave_state(new_state):
	.leave_state(new_state)
	
func process_state(delta):
	.process_state(delta)
	
	if(player_spotted):
		wait_for_charge_timer -= delta
		
		if (wait_for_charge_timer<0):
			get_parent().set_state(\"CHARGING\")
		
	elif($player_detector.is_colliding()):
		var collider = $player_detector.get_collider()
		
		if(collider.is_in_group(\"player\")):
			get_parent().get_handler(\"CHARGING\").set_charging_distance(abs(get_parent().position.x - collider.position.x))
			player_spotted = true
			get_parent().get_node(\"ExtendedAnimationPlayer\").play(\"eyes_to_red\")
"

[sub_resource type="GDScript" id=2]

script/source = "extends \"res://addons/state_handler/state_handler.gd\"

var charging_distance = 0

export var starting_speed = 64*4
export var max_speed = 64*18 
export var charging_acceleration = 64*30
export var overrun_distance = 64 * 5

func set_charging_distance(distance):
	charging_distance = distance

func get_charging_distance():
	return charging_distance

var starting_x = 0

var prev_max_vel = null

func enter_state(previous_state):
	.enter_state(previous_state)
	
	starting_x = get_parent().position.x
	
	get_parent().set_velocity(Vector2(starting_speed, 0))
	
	prev_max_vel = get_parent().get_max_velocity()
	
	get_parent().set_max_velocity(Vector2(max_speed, 0))
	
	get_parent().set_acceleration(Vector2(charging_acceleration,0))
	
func leave_state(new_state):
	.leave_state(new_state)
	
	get_parent().get_node(\"charge_animation_player\").play(\"eyes_to_black\")
	
	get_parent().set_velocity(Vector2())
	
	get_parent().set_acceleration(Vector2())
	
	get_parent().set_max_velocity(prev_max_vel)
	
func process_state(delta):
	.process_state(delta)
	
	if(get_charging_distance() + charging_distance > abs(get_parent().position.x - starting_x)):
		var collider = get_parent().apply_velocity_x(delta)
		
		$ground_detector.force_raycast_update()
		
		if(collider != null):
			get_parent().set_state(\"STUNNED_BY_CRASH\")
		elif(not $ground_detector.is_colliding()):
			get_parent().set_state(\"STUNNED_BY_EXHAUSTION\")
	else:
		get_parent().set_state(\"STUNNED_BY_EXHAUSTION\")
"

